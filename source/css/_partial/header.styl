#header-wrapper
  width: 100%;
  padding: 0 1em
  background: linear-gradient(145deg,$blue-6 11%, $blue-9 75%)
  box-shadow: 0 0.1em 0.2em $grey-5

  #header
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    width: 100%;
    max-width: 1024px
    margin: 0 auto
    a
      color: $grey-3

    #header-title
      padding: 0.2em 0
      .title-link
        font-style: italic
        font-weight: 600
        font-size: 1.5em
        text-shadow: 0.075em 0.075em 0 $grey-8
        margin: 0
    
    #header-nav
      flex: 1 1 auto
      #main-nav
        height: 100%
        display: flex
        justify-content: flex-end
        .main-nav-link
          font-weight: 400
          padding: .4em 1em
          transition: background-color .4s ease
          &:hover
            color: $grey-3
            background-color: $blue-10
            box-shadow: inset 0.01em 0.01em 0.1em $grey-9
